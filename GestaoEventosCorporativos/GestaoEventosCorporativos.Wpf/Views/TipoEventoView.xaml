<UserControl x:Class="GestaoEventosCorporativos.Wpf.Views.TipoEventoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BOTÃO DE VOLTAR -->
        <DockPanel Margin="0,0,0,20">
            <TextBlock Text="Gerenciar Eventos" FontSize="22" FontWeight="Bold" 
               VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <Button Content="Voltar" Background="Red" Width="100" Height="30" 
            DockPanel.Dock="Right" 
            HorizontalAlignment="Right"
            Click="Voltar_Click"/>
        </DockPanel>

        <!-- Cadastro -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtDescricao" Width="200" Margin="0,0,10,0"/>
            <Button x:Name="btnCadastrar" Background="Green" Content="Cadastrar" Width="100" Click="Cadastrar_Click"/>
        </StackPanel>

        <!-- Listagem -->
        <DataGrid x:Name="dgTipoEventos" Grid.Row="1" AutoGenerateColumns="False" 
          IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>

                <!-- Ações -->
                <DataGridTemplateColumn Header="Ações" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Editar"
                                Click="Editar_Click"
                                Tag="{Binding}"
                                Margin="0,0,5,0"
                                Background="DodgerBlue" Foreground="White" Width="60"/>
                                <Button Content="Excluir"
                                Click="Excluir_Click"
                                Tag="{Binding Id}"
                                Background="Red" Foreground="White" Width="60"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>



        <!-- Paginação -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Anterior" Width="100" Margin="5" Click="Anterior_Click"/>
            <TextBlock x:Name="txtPagina" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>
            <Button Content="Próxima" Width="100" Margin="5" Click="Proxima_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
