<UserControl x:Class="GestaoEventosCorporativos.Wpf.Views.EventoAddParticipantesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cabeçalho / info -->
            <RowDefinition Height="Auto"/>
            <!-- Participantes já no evento -->
            <RowDefinition Height="*"/>
            <!-- Lista paginada de disponíveis -->
            <RowDefinition Height="Auto"/>
            <!-- Paginação -->
        </Grid.RowDefinitions>

        <!-- Cabeçalho / informações do evento -->
        <Border Grid.Row="0" Padding="16" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="lblTitulo" FontSize="20" FontWeight="Bold" Margin="0,0,0,6"/>
                    <TextBlock x:Name="lblPeriodo" Margin="0,2,0,0"/>
                    <TextBlock x:Name="lblTipo" Margin="0,2,0,0"/>
                    <TextBlock x:Name="lblLocal" Margin="0,2,0,0"/>
                    <TextBlock x:Name="lblOrcamento" Margin="0,2,0,0"/>
                    <TextBlock x:Name="lblLotacao" Margin="0,2,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Voltar" Padding="10,4" Click="Voltar_Click"
                        HorizontalAlignment="Right" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Participantes já vinculados ao evento -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Participantes do Evento" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgParticipantesEvento" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Nome Completo" Binding="{Binding NomeCompleto}" Width="*"/>
                    <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="150"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Lista paginada de participantes disponíveis -->
        <DataGrid x:Name="dgParticipantes" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Nome Completo" Binding="{Binding NomeCompleto}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="150"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="150"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="120"/>

                <DataGridTemplateColumn Header="Ações" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Adicionar"
                                    Tag="{Binding Cpf}"
                                    Click="Adicionar_Click"
                                    Background="Green" Foreground="White" Padding="8,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Paginação -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Anterior" Width="100" Margin="5" Click="Anterior_Click"/>
            <TextBlock x:Name="txtPagina" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>
            <Button Content="Próxima" Width="100" Margin="5" Click="Proxima_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
