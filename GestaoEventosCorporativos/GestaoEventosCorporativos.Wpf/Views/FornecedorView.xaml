<UserControl x:Class="GestaoEventosCorporativos.Wpf.Views.FornecedorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cabeçalho -->
            <RowDefinition Height="Auto"/>
            <!-- Cadastro -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Paginação -->
        </Grid.RowDefinitions>

        <!-- Cabeçalho com título + botão voltar -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Gerenciar Fornecedores" 
                       FontSize="22" FontWeight="Bold"
                       VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <Button Content="Voltar" Width="100" Height="30"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    Click="Voltar_Click"/>
        </DockPanel>

        <!-- Cadastro -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Cadastrar Fornecedor" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Nome do Serviço"/>
            <TextBox x:Name="txtNomeServico" Height="30" Margin="0,0,0,10"/>

            
            <Label Content="CNPJ"/>
            <Label Content="Com 14 digitos"/>
            <Label Content="ex: 12345678912345"/>
            <TextBox x:Name="txtCnpj" Height="30" Margin="0,0,0,10"/>

            <Label Content="Valor Base"/>
            <TextBox x:Name="txtValorBase" Height="30" Margin="0,0,0,10"/>

            <Button x:Name="btnCadastrar" Content="Cadastrar/Atualizar" Height="35" Click="Cadastrar_Click"/>
        </StackPanel>

        <!-- Lista de fornecedores -->
        <DataGrid x:Name="dgFornecedores" Grid.Row="2" AutoGenerateColumns="False" 
                  IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Serviço" Binding="{Binding NomeServico}" Width="*"/>
                <DataGridTextColumn Header="CNPJ" Binding="{Binding Cnpj}" Width="200"/>
                <DataGridTextColumn Header="Valor Base" Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="ValorBase" StringFormat="C"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- Coluna de ações -->
                <DataGridTemplateColumn Header="Ações" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Editar"
                                        Click="Editar_Click"
                                        Tag="{Binding}"
                                        Margin="0,0,5,0"
                                        Background="DodgerBlue" Foreground="White" Width="60"/>
                                <Button Content="Excluir"
                                        Click="Excluir_Click"
                                        Tag="{Binding Id}"
                                        Background="Red" Foreground="White" Width="60"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Paginação -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Anterior" Width="100" Margin="5" Click="Anterior_Click"/>
            <TextBlock x:Name="txtPagina" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>
            <Button Content="Próxima" Width="100" Margin="5" Click="Proxima_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
