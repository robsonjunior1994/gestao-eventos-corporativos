<Window x:Class="GestaoEventosCorporativos.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Nome"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10" Height="30"/>

            <Label Content="Email"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10" Height="30"/>

            <Label Content="Senha"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" Height="30"/>

            <Button Content="Cadastrar" Click="Cadastrar_Click" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
